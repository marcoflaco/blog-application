extends ../app.pug

block content
  .container
    .card.card-block
      .row
        .col-md-4.hidden-md-down
          img(src=post.imageURL alt=book.title + " Cover Image" class="img-fluid")
        .col-xs-12.col-md-8
          h2= post.title
          h5= post.author
          p= post.description
          .row
            .col-xs-3.offset-xs-6
              a(href="/posts/" + post.id + "/edit" class="btn btn-warning btn-block") EDIT POST
            .col-xs-3
              form(action="/posts/" + post.id method="POST")
                input(type="hidden" name="_method" value="DELETE")
                button(type="submit" class="btn btn-danger btn-block" data-post=post.id) DELETE
